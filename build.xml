<project name="EditorConfigPlugin" default="all" basedir=".">
  <description>
    This is an ant build.xml file for building the EditorConfig plugin for
    jEdit.
  </description>

  <property file="build.properties" />
  <property name="src.dir" location="src" />
  <property name="dist.target" value="all" />
  <property name="build.support" value="./build-support" />
  <property name="jedit.plugins.dir" value="${install.dir}" />

  <import file="${build.support}/plugin-build.xml" />

  <target name="test-submodule" >
    <!-- Check the EditorConfig Python Core files. If they do not exist, remind
         user to checkout the submodule. -->
    <fail message="It seems that EditorConfig Python Core submodule is not available. Please run 'git submodule update --init' to checkout the submodule.">
      <condition>
        <not>
          <available file="./editorconfig-core-py/java-binding" type="dir" />
        </not>
      </condition>
    </fail>
  </target>
  
  <target name="clean" depends="test-submodule" >
    <ant dir="./editorconfig-core-py/java-binding"
         target="clean" inheritall="false" />
    <antcall target="jEditPlugin.clean" />
  </target>

  <!-- build the EditorConfig core -->
  <target name="build-editorconfig-core" depends="test-submodule" >
    <ant dir="./editorconfig-core-py/java-binding" inheritall="false" />
    <copy file="./editorconfig-core-py/java-binding/build/editorconfig.jar"
      todir="${install.dir}" force="true" />
  </target>

  <selector id="packageFiles">
    <filename name="docs/index.html" />
  </selector>

  <path id="project.class.path">
    <pathelement location="${basedir}/editorconfig-core-py/java-binding/build/editorconfig.jar" />
  </path>

  <target name="all" depends="build-editorconfig-core,build" />
</project>
